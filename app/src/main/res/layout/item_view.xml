<?xml version="1.0" encoding="utf-8"?>
<com.dverybest.statussaver.utils.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:background="#00FFFFFF"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/image"
        app:cardCornerRadius="20dp"
        android:layout_above="@id/linear"
        android:layout_centerInParent="true"
        app:strokeWidth="1dp"
        android:layout_gravity="center"
        app:strokeColor="#f0f0f0"
        android:layout_height="300dp">

   <FrameLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="match_parent">
       <ImageView
           android:layout_width="match_parent"
           android:scaleType="centerCrop"
           android:layout_weight="3"
           android:src="@drawable/shopping_cart"
           android:id="@+id/productImage"
           android:layout_height="match_parent" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:background="#ffffff"
           android:layout_gravity="bottom|center_horizontal"
           android:layout_below="@id/productImage"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:text="Stew Box"
               android:textColor="#000"
               android:layout_below="@id/productName"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="2dp"
               android:layout_gravity="center"
               android:textStyle="bold"
               android:textAlignment="center"
               android:id="@+id/productName"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="Meal Boxes"
               android:textColor="#000"
               android:layout_below="@id/productName"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="2dp"
               android:layout_gravity="center"
               android:textAlignment="center"
               android:id="@+id/productCategory"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="N4000.00"
               android:textStyle="bold"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/productCategory"
               android:layout_marginTop="2dp"
               android:textColor="#000"
               android:id="@+id/productPrice"
               android:layout_gravity="center"
               android:textAlignment="center"
               android:layout_height="wrap_content"/>
       </LinearLayout>
   </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

</com.dverybest.statussaver.utils.SquareRelativeLayout>